---
export interface Props {
    name: string;
    desc: string;
}

const { name, desc } = Astro.props;
---

<div class="container">
    <div class="code-main">
        <a href={`https://www.github.com/lbeckman314/${name}`}><img class="center" src={`/assets/images/${name}.png`}></a>
        <div class="border-code"></div>
        <h1>{name}</h1>
        <p class="center">{desc}</p>
        <ul class="code">
            <li class="code"><a href={`https://github.com/lbeckman314/${name}/`}><img src="/assets/svg/code.svg"> Github</a></li>
        </ul>
    </div>
</div>
